!!! 5
%html{lang: I18n.locale}
  %head
    %meta{charset: 'UTF-8'}
    = render :partial => 'shared/title'
    %link{href: 'https://fonts.googleapis.com/css?family=Muli', rel: 'stylesheet'}
    %link{href: 'https://fonts.googleapis.com/icon?family=Material+Icons|Material+Icons+Outlined', rel: 'stylesheet'}
    %link{href: 'https://cdnjs.cloudflare.com/ajax/libs/flexboxgrid/6.3.1/flexboxgrid.min.css', rel: 'stylesheet', type: 'text/css'}
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'legacy'
    = javascript_include_tag I18n.locale
    - if @react_app == 'official-react-app'
      = javascript_include_tag 'official-application', defer: true
    - elsif @react_app == 'public-react-app'
      = javascript_include_tag 'public-application', defer: true
    - if facebook_env?
      = javascript_include_tag 'social'
    = csrf_meta_tag
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    = render :partial => 'shared/google_analytics'
    = render 'shared/facebook_meta'
    = render 'shared/google_event'
    = render 'shared/icons'
    - if ProductionEnvironment.production?
      = render 'shared/adsense'
    - if no_nav?
      :css
        .buttons--nav, .button--pdf { display: none; }
  = render :partial => 'shared/body'
