<% race = menu_race %>
<% if race %>
  <% series = menu_series %>
  <% series = race.series.first unless series %>
  <div class="second_level_menu">
    <div class="menu sub_menu">
      <ul>
        <%= menu_item "Yhteenveto", official_race_path(race), @is_race %>
        <%= menu_item "Kilpailu & sarjat", edit_official_race_path(race), @is_race_edit %>
        <% if series and !race.series.first.new_record? %>
          <%= menu_item "Kilpailijat", official_series_competitors_path(series), @is_competitors %>
          <%= menu_item "Ajat", official_series_times_path(series), @is_times %>
          <%= menu_item "Arvioinnit", official_series_estimates_path(series), @is_estimates %>
          <%= menu_item "Ammunta", official_series_shots_path(series), @is_shots %>
        <% end %>
        <%= menu_item "Pikasyöttö", official_race_quick_saves_path(race), @is_quick_saves %>
        <%= menu_item "Oikeat arviot", official_race_correct_estimates_path(race), @is_correct_estimates %>
        <%= menu_item "Joukkuek.", official_race_team_competitions_path(race), @is_team_competitions %>
        <%= menu_item "Viestit", official_race_relays_path(race), @is_relays %>
        <%= menu_item "Seurat", official_race_clubs_path(race), @is_clubs %>
        <%= menu_item "Lehdistö", official_race_media_path(race), @is_media %>
        <% if online? %>
          <%= menu_item "Toimitsijat", official_race_invite_officials_path(race), @is_officials %>
        <% end %>
        <% export_title = (offline? ? 'Julkaise' : 'Lataa') %>
        <%= menu_item export_title, new_official_race_exports_path(race), @is_export %>
      </ul>
    </div>
  </div>
<% end %>