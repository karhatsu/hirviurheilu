<% content_for :title, "#{@race.name} - Toimitsijat" %>
<h2>Toimitsijat</h2>
<%= flash_error %>
<%= flash_notice %>
<div id="current_officials">
  <%= (@race.users.collect do |user| full_name(user, true) end).join(", ") %>
</div>
<h3>Kutsu toinen henkilö tämän kilpailun toimitsijaksi</h3>
<div class="instructions">Henkilön täytyy olla rekisteröitynyt palveluun omalla
  sähköpostiosoitteellaan.</div>
<%= form_tag :url => official_race_invite_officials_path(@race), :method => :post do %>
  <%= label_tag :email, 'Sähköposti' %>
  <%= text_field_tag :email, '', :size => 30 %>
  <%= submit_tag "Lähetä kutsu" %>
<% end %>
<hr/>
<%= link_to 'Takaisin Yhteenveto-sivulle', official_race_path(@race) %>