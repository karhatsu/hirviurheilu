.form__horizontal-fields
  .form__field.form__field--sm
    = f.label :min_number, t('official.correct_estimates.index.start_numbers')
    = f.number_field :min_number, maxlength: 4, min: 0
  .form__field.form__field--sm
    = f.label :max_number, raw('&#8211;')
    = f.number_field :max_number, maxlength: 4, min: 0
  .form__field.form__field--sm
    = f.label :distance1
    = f.number_field :distance1, min: 50, max: 200
  .form__field.form__field--sm
    = f.label :distance2
    = f.number_field :distance2, min: 50, max: 200
  - if @race.estimates_at_most == 4
    .form__field.form__field--sm
      = f.label :distance3
      = f.number_field :distance3, min: 50, max: 200
    .form__field.form__field--sm
      = f.label :distance4
      = f.number_field :distance4, min: 50, max: 200
  = remove_child_link t(:remove), f, 'form__horizontal-fields', '', 'button button--danger'
