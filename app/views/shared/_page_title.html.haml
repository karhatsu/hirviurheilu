- race = menu_race
- cup = menu_cup
- if race
  %div.race-title
    %div.race-title__name{itemprop: 'name'}= race.name
    %div
      %span.race-title__sport #{t "sport_name.#{race.sport_key}"},
      %span.race-title__location{itemprop: 'location', itemtype: 'http://schema.org/Place'} #{race.location},
      %span.race-title__dates= race_date_interval(race)
- elsif cup
  = cup.name
- else
  = yield :page_title
