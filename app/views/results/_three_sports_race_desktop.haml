- unofficials = unofficials_result_rule series.race
%table.results-table
  %tr
    %th &nbsp;
    %th= t 'attributes.name'
    %th= t 'number_short'
    %th#table_club_title= club_title(series.race)
    - if series.time_points?
      %th.center= time_title(series.race)
    %th.center= t(:estimating)
    %th.center= t(:shooting)
    %th= t(:points)
  - prev_competitor_results = 1.0/0.0
  - series.three_sports_results(unofficials).each_with_index do |comp, i|
    - next unless i < 3 or params[:club_id].blank? or comp.club_id == params[:club_id].to_i
    - competitor_results = comp.three_sports_race_results(unofficials)
    %tr{id: "comp_#{i+1}", class: i % 2 == 0 ? 'odd' : ''}
      - @max_points = comp.points if i == 0
      %td
        = competitor_results == prev_competitor_results ? raw('&nbsp;') : "#{i + 1}."
      %td
        = full_name(comp)
        = "(#{comp.age_group.name})" if comp.age_group
        = "(#{t(:unofficial_short)})" if comp.unofficial?
      %td= comp.number ? comp.number : ''
      %td= comp.club.name
      - if series.time_points?
        %td= time_points_print(comp, true, unofficials)
      %td= estimate_points_print series.race, comp
      %td= shooting_points_print(comp, true, true)
      %td.center{class: 'total-points'}
        = points_print(comp, unofficials)
        = national_record_print(comp) if comp.points.to_i >= @max_points.to_i
    - prev_competitor_results = competitor_results
