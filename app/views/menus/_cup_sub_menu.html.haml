- menu_cup_series = @cup_series || @cup.cup_series.first
.menu.menu--sub.menu--sub-1
  = menu_item t('cup_sub_menu.home_page'), cup_path(@cup), @is_cup_main
  - unless @cup.cup_series.empty?
    = menu_item t('cup_sub_menu.results'), cup_cup_series_path(@cup, menu_cup_series), @is_cup_series, nil, true do
      - cup_series_dropdown_menu(@cup)
    - if @cup.has_rifle?
      = menu_item t('cup_sub_menu.rifle'), cup_rifle_cup_series_path(@cup, menu_cup_series), @is_rifle_cup_series, nil, true do
        - cup_series_dropdown_menu(@cup, true)
    = menu_item t('cup_sub_menu.press'), cup_press_path(@cup), false
