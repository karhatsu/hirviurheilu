- unofficials = unofficials_result_rule @series.race
%h1= @series.race.name
= @series.race.location, = race_date_interval(@series.race, false)
%h2 #{@series.name} - #{series_result_title(@series, unofficials)}
- cache [@series, unofficials, I18n.locale] do
  - if @series.sport.nordic?
    = render partial: 'results/nordic_race_desktop', locals: { series: @series }
  - elsif @series.sport.european?
    = render partial: 'results/european_race_desktop', locals: { series: @series }
  - elsif @series.sport.shooting?
    = render :partial => 'results/shooting_race_desktop', locals: { series: @series }
  - else
    = render partial: 'series/three_sport_race_infos', locals: { series: @series, show_race_status: true }
    = render :partial => 'results/three_sports_race_desktop', locals: { series: @series }
